<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_square"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_dialog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_arrow_with_scribble_active" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView_dialog"
        android:text="title"
        android:textColor="#4c4c4c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="33dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_tv"
        android:lineSpacingExtra="2sp"
        android:text="We detect that the driver had stopped dispensing fuel. Click on resume to continue. "
        android:textColor="#999999"
        android:textSize="14sp" />


</RelativeLayout>